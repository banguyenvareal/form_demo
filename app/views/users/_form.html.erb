<%= form_for @user, remote: true, url: withdraw_user_path, method: :post do |f|  %>
  <div class="form-group">
    <%= f.label 'Money' %>
    <input id="money" type="text" />
  </div>

  <div class="form-group">
    <%= f.label 'Bank account' %>
      <% options = options_for_select(@user.bank_accounts.map{ |account| [account.name, account.id] }) %>
    <%= select_tag('account_id', options , prompt: "Please select an account:", class: "form-control", id: 'accounts') %>
    <%= f.submit 'Withdraw', id: "btn-withdraw", remote: true %>
  </div>
<% end %>

