<%= render 'shared/error_messages', object: @user %>
<%= form_for @user, remote: true,  url: withdraw_user_path, method: :get do |f|  %>
  <div class="form-group">
    <%= f.label 'Money' %>
    <%= number_field_tag :money, 0, required: true%>
  </div>
  <p>Status: <span id="status"> Input money</span></p>
  <div class="form-group">
    <%= f.label 'Bank account' %>
    <div id="account-options">
      <%= render partial: 'account_options', locals: {bank_accounts: @user.bank_accounts } %>
    </div>
    <%= f.submit 'Withdraw', id: "btn-withdraw"%>
  </div>
<% end %>
