<link href="https://cdn.jsdelivr.net/npm/select2@4.0.11/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.0.11/dist/js/select2.min.js"></script>
<%= render 'form' %>
<script type="text/javascript">
  $('#account-options').select2({
    placeholder: "Select acounts",
    allowClear: true,
    ajax: {
      url: '/bank_accounts.json',
      processResults: function(data) {
        return {
          results: $.map(data, function(item) {
            var balance_text = item.balance.toString();
            return { id: item.id, text: item.id + ": " + balance_text }
          })
        };
      }
    }
  });

  $('#btn-withdraw').click(function(){
    $('#status').text('working');
    });
</script>

